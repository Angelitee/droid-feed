<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NewsSourceTextStyle" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BorderlessImageButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="GroupTitleStyle" parent="@android:style/TextAppearance.Material.Body2">
        <item name="android:textColor">@color/grayLight</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFeatureSettings">smcp, onum</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="DF" />

    <style name="DF.Button" />

    <style name="DF.ButtonRowDark">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingRight">@dimen/spacing_xxlarge</item>
        <item name="android:paddingLeft">@dimen/spacing_xxlarge</item>
        <item name="android:textSize">20sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DF.TitleStyleLight">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="DF.TitleStyleLight.List">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DF.TitleStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DF.TitleStyle.List">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DF.BodyStyle" parent="@android:style/TextAppearance.Material.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DF.Button.Raised" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DF.Button.Flat" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textIsSelectable">false</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:paddingTop">@dimen/poppins_padding_buttons</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DF.Button.Outline" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/card_corner_radius</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="android:paddingTop">@dimen/poppins_padding_buttons</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="DF.Button.Icon">con
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_height">@dimen/spacing_xxlarge</item>
        <item name="android:layout_width">@dimen/spacing_xxlarge</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="DF.Button.Text" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DF.Button.Menu.Text" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="lineHeight">20dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingTop">@dimen/poppins_padding_buttons</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="backgroundTint">@drawable/sl_menu_button_background</item>
    </style>

    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginTop">@dimen/spacing_micro</item>
        <item name="android:layout_marginBottom">@dimen/spacing_micro</item>
        <item name="android:layout_marginEnd">@dimen/spacing_small</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>