<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NewsSourceTextStyle" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BorderlessImageButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="GroupTitleStyle" parent="@android:style/TextAppearance.Material.Body2">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFeatureSettings">smcp, onum</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="DF" />

    <style name="DF.ButtonRowDark">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingRight">48dp</item>
        <item name="android:paddingLeft">48dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DF.TitleStyleLight">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="DF.TitleStyleLight.List">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DF.TitleStyleDark">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DF.TitleStyleDark.List">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DF.BodyStyleDark" parent="@android:style/TextAppearance.Material.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DF.ButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>