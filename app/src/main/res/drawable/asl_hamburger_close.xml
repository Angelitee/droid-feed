<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/close"
        android:drawable="@drawable/vd_close"
        android:state_selected="true" />

    <item
        android:id="@+id/hamburger"
        android:drawable="@drawable/vd_hamburger_menu" />

    <transition
        android:drawable="@drawable/avd_morph_hamburger_to_close"
        android:fromId="@id/hamburger"
        android:toId="@id/close" />

    <transition
        android:drawable="@drawable/avd_morph_close_to_hamburger"
        android:fromId="@id/close"
        android:toId="@id/hamburger" />

</animated-selector>